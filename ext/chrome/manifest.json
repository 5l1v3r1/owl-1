{
  "manifest_version": 2,
  "name": "Owl",
  "version": "0.1.0",
  "author": "junjiemars@gmail.com",
  "short_name": "lightweight chrome proxy",
  "description": "Lightweight chrome proxy, If it is not working may be it is sleeping.",
  "icons": {  "16": "icons/owl-16.png",
              "32": "icons/owl-32.png",
              "48": "icons/owl-48.png",
              "128": "icons/owl-128.png",
              "256": "icons/owl-256.png"
           },
  "background": {
    "scripts": [
      "js/main.js"
    ]
  },
  "options_page": "options.html",
  "permissions": [
    "proxy",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
	"js/main.js"
      ],
      "css": ["css/cs.css"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["file:///", "file:///*/"],
      "css": ["css/fu.css"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_icon": "icons/owl-256.png",
    "default_popup": "popup.html"
  }
}
