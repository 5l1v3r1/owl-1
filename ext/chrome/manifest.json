{
  "manifest_version": 2,
  "name": "Owl",
  "version": "0.1.0",
  "description": "Lightweight chrome proxy, If it is not working may be it is sleeping.",
  "icons": {  "16": "icons/icon16.png",
              "48": "icons/icon48.png",
             "128": "icons/icon128.png" },
  "background": {
    "scripts": [
      "js/main.js"
    ]
  },
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "bookmarks",
    "history",
    "clipboardRead",
    "storage",
    "proxy",
    "webRequest",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
	"js/main.js"
      ],
      "css": ["css/cs.css"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["file:///", "file:///*/"],
      "css": ["css/file_urls.css"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_icon": "icons/browser_action_disabled.png",
    "default_popup": "popup.html"
  }
}
